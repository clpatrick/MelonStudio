<Window x:Class="MelonStudio.LoadModelWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Load Model - MelonStudio" 
        Height="450" Width="600"
        Background="#1E1E1E"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResizeWithGrip">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Text="Select Model to Load" 
                   FontSize="18" FontWeight="Bold" 
                   Foreground="#D4D4D4" Margin="0,0,0,15"/>

        <!-- Folder Path -->
        <Grid Grid.Row="1" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <TextBox x:Name="FolderPathBox"
                     Text="{Binding ModelsFolder, UpdateSourceTrigger=PropertyChanged}"
                     Background="#3C3C3C" Foreground="#D4D4D4"
                     BorderBrush="#555555" Padding="10,8"
                     VerticalContentAlignment="Center"/>
            
            <Button Grid.Column="1" Content="Browse..."
                    Click="BrowseFolder_Click"
                    Margin="10,0,0,0" Padding="15,8"
                    Background="#5A5A5A" Foreground="White"
                    BorderThickness="0"/>
        </Grid>

        <!-- Model List -->
        <ListBox Grid.Row="2" 
                 x:Name="ModelList"
                 ItemsSource="{Binding AvailableModels}"
                 SelectedItem="{Binding SelectedModel}"
                 Background="#252526" BorderThickness="0"
                 ScrollViewer.HorizontalScrollBarVisibility="Disabled">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border Background="#2D2D2D" Margin="0,2" Padding="12" CornerRadius="4"
                            Cursor="Hand">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Text="ðŸ“" FontSize="16" Margin="0,0,10,0"
                                       VerticalAlignment="Center"/>
                            
                            <StackPanel Grid.Column="1">
                                <TextBlock Text="{Binding Name}" 
                                           Foreground="#569CD6" FontWeight="SemiBold"/>
                                <TextBlock Text="{Binding Path}" 
                                           Foreground="#808080" FontSize="11"
                                           TextTrimming="CharacterEllipsis"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
            <ListBox.ItemContainerStyle>
                <Style TargetType="ListBoxItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="BorderThickness" Value="0"/>
                    <Setter Property="Padding" Value="0"/>
                    <Setter Property="Margin" Value="0"/>
                </Style>
            </ListBox.ItemContainerStyle>
        </ListBox>

        <!-- Buttons -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" 
                    HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="Refresh" Click="Refresh_Click"
                    Padding="20,10" Margin="0,0,10,0"
                    Background="#5A5A5A" Foreground="White"
                    BorderThickness="0"/>
            <Button Content="Cancel" Click="Cancel_Click"
                    Padding="20,10" Margin="0,0,10,0"
                    Background="#5A5A5A" Foreground="White"
                    BorderThickness="0"/>
            <Button Content="Load" Click="Load_Click"
                    Padding="20,10"
                    Background="#28A745" Foreground="White"
                    FontWeight="Bold" BorderThickness="0"/>
        </StackPanel>
    </Grid>
</Window>
