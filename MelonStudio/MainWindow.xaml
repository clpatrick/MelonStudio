<Window x:Class="MelonStudio.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MelonStudio"
        xmlns:models="clr-namespace:MelonStudio.Models"
        mc:Ignorable="d"
        Title="Local LLM Chat (RTX 4090 Native)" 
        Height="600" Width="900"
        Background="#1E1E1E">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Chat History -->
        <ListBox x:Name="ChatListBox" 
                 ItemsSource="{Binding Messages}" 
                 Background="#252526"
                 BorderThickness="0"
                 ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                 ScrollViewer.VerticalScrollBarVisibility="Auto">
            <ListBox.ItemTemplate>
                <DataTemplate DataType="{x:Type models:ChatMessage}">
                    <Grid Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="80" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Text="{Binding Role}" 
                                   FontWeight="Bold" 
                                   Foreground="#569CD6"
                                   VerticalAlignment="Top"/>
                        
                        <TextBlock Grid.Column="1" 
                                   Text="{Binding Content}" 
                                   TextWrapping="Wrap" 
                                   Foreground="#D4D4D4"
                                   Margin="10,0,0,0"/>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
            <ListBox.ItemContainerStyle>
                <Style TargetType="ListBoxItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="BorderThickness" Value="0"/>
                </Style>
            </ListBox.ItemContainerStyle>
        </ListBox>

        <!-- Input Area -->
        <Border Grid.Row="1" Background="#333333" Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <TextBox x:Name="InputTextBox"
                         Text="{Binding InputMessage, UpdateSourceTrigger=PropertyChanged}" 
                         Background="#3C3C3C"
                         Foreground="#D4D4D4"
                         BorderBrush="#555555"
                         Padding="10"
                         VerticalContentAlignment="Center"
                         AcceptsReturn="True"
                         TextWrapping="Wrap"
                         MaxHeight="100"/>
                
                <Button Grid.Column="1" 
                        Content="Send" 
                        Command="{Binding SendMessageCommand}"
                        Margin="10,0,0,0"
                        Padding="20,10"
                        Background="#0E639C"
                        Foreground="White"
                        BorderThickness="0"/>
                
                <Button Grid.Column="2" 
                        Content="Load Model" 
                        Command="{Binding LoadModelCommand}"
                        Margin="10,0,0,0"
                        Padding="20,10"
                        Background="#5A5A5A"
                        Foreground="White"
                        BorderThickness="0"/>
                
                <Button Grid.Column="3" 
                        Content="âš™ Models" 
                        Click="OpenModelManager_Click"
                        Margin="10,0,0,0"
                        Padding="20,10"
                        Background="#6C5CE7"
                        Foreground="White"
                        BorderThickness="0"
                        ToolTip="Open Model Manager"/>
            </Grid>
        </Border>
        
        <!-- Status Bar -->
        <TextBlock Text="{Binding StatusMessage}" 
                   Grid.Row="1" 
                   VerticalAlignment="Top" 
                   HorizontalAlignment="Left" 
                   Margin="15,-25,0,0" 
                   FontSize="11" 
                   Foreground="#808080"/>
        
        <!-- Loading Overlay -->
        <Grid Grid.RowSpan="2" 
              Background="#80000000" 
              Visibility="{Binding IsGenerating, Converter={StaticResource BoolToVisConverter}}"
              IsHitTestVisible="False">
            <TextBlock Text="Generating..." 
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center"
                       Foreground="White"
                       FontSize="18"/>
        </Grid>
    </Grid>
</Window>
