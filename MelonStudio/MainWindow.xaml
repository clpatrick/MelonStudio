<Window x:Class="MelonStudio.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MelonStudio"
        xmlns:models="clr-namespace:MelonStudio.Models"
        mc:Ignorable="d"
        Title="MelonStudio" 
        Height="700" Width="1100"
        Background="#1E1E1E"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style x:Key="NavButtonStyle" TargetType="RadioButton">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border x:Name="border" Background="Transparent" 
                                Padding="12" Cursor="Hand"
                                ToolTip="{TemplateBinding ToolTip}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#3D3D3D"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#6C5CE7"/>
                                <Setter TargetName="border" Property="BorderThickness" Value="3,0,0,0"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#2D2D2D"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="#808080"/>
            <Setter Property="FontSize" Value="20"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left Sidebar -->
        <Border Background="#181818" BorderBrush="#2D2D2D" BorderThickness="0,0,1,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Logo/App Icon -->
                <Border Padding="12" Margin="0,0,0,10">
                    <TextBlock Text="ðŸˆ" FontSize="24" HorizontalAlignment="Center"
                               ToolTip="MelonStudio"/>
                </Border>

                <!-- Navigation -->
                <StackPanel Grid.Row="1">
                    <RadioButton x:Name="NavChat" Style="{StaticResource NavButtonStyle}"
                                 IsChecked="True" GroupName="Nav" 
                                 Checked="NavChat_Checked" ToolTip="Chat">
                        <TextBlock Text="ðŸ’¬" FontSize="20"/>
                    </RadioButton>
                    
                    <RadioButton x:Name="NavModels" Style="{StaticResource NavButtonStyle}"
                                 GroupName="Nav" Checked="NavModels_Checked" ToolTip="My Models">
                        <TextBlock Text="ðŸ“" FontSize="20"/>
                    </RadioButton>
                    
                    <RadioButton x:Name="NavDiscover" Style="{StaticResource NavButtonStyle}"
                                 GroupName="Nav" Checked="NavDiscover_Checked" ToolTip="Discover">
                        <TextBlock Text="ðŸ”" FontSize="20"/>
                    </RadioButton>
                </StackPanel>

                <!-- Settings at bottom -->
                <StackPanel Grid.Row="2" Margin="0,0,0,10">
                    <RadioButton x:Name="NavSettings" Style="{StaticResource NavButtonStyle}"
                                 GroupName="Nav" Checked="NavSettings_Checked" ToolTip="Settings">
                        <TextBlock Text="âš™ï¸" FontSize="20"/>
                    </RadioButton>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content Area -->
        <Grid Grid.Column="1">
            <!-- Chat View -->
            <Grid x:Name="ChatView">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Top Bar -->
                <Border Background="#252526" Padding="15,10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="{Binding LoadedModelName, FallbackValue='No model loaded'}" 
                                       Foreground="#D4D4D4"/>
                            <TextBlock Text=" â€¢ " Foreground="#555555"
                                       Visibility="{Binding ModelContextLength, Converter={StaticResource BoolToVisConverter}}"/>
                            <TextBlock Text="{Binding ModelContextLength, StringFormat={}{0:N0} ctx}" 
                                       Foreground="#808080"
                                       Visibility="{Binding ModelContextLength, Converter={StaticResource BoolToVisConverter}}"/>
                        </StackPanel>
                        
                        <Button Grid.Column="1" Content="Load Model..."
                                Click="LoadModel_Click"
                                Padding="15,6"
                                Background="#3D3D3D" Foreground="#D4D4D4"
                                BorderThickness="0"/>
                    </Grid>
                </Border>

                <!-- Chat History -->
                <ListBox Grid.Row="1" x:Name="ChatListBox" 
                         ItemsSource="{Binding Messages}" 
                         Background="#1E1E1E"
                         BorderThickness="0"
                         ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                         ScrollViewer.VerticalScrollBarVisibility="Auto">
                    <ListBox.ItemTemplate>
                        <DataTemplate DataType="{x:Type models:ChatMessage}">
                            <Border Margin="20,10" Padding="15" CornerRadius="8">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Role}" Value="User">
                                                <Setter Property="Background" Value="#2D5A7B"/>
                                                <Setter Property="HorizontalAlignment" Value="Right"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Role}" Value="Assistant">
                                                <Setter Property="Background" Value="#2D2D2D"/>
                                                <Setter Property="HorizontalAlignment" Value="Left"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                                <StackPanel MaxWidth="600">
                                    <!-- Message Content (Selectable) -->
                                    <TextBox Text="{Binding Content, Mode=OneWay}" 
                                             TextWrapping="Wrap" 
                                             Foreground="#D4D4D4"
                                             Background="Transparent"
                                             BorderThickness="0"
                                             IsReadOnly="True"
                                             Cursor="IBeam"/>
                                    
                                    <!-- Metadata (Model + Performance) -->
                                    <TextBlock Text="{Binding Metadata}" 
                                               Foreground="#808080" 
                                               FontSize="10" 
                                               Margin="0,8,0,0"
                                               Visibility="{Binding HasMetadata, Converter={StaticResource BoolToVisConverter}}"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="BorderThickness" Value="0"/>
                        </Style>
                    </ListBox.ItemContainerStyle>
                </ListBox>

                <!-- Input Area -->
                <Border Grid.Row="2" Background="#252526" Padding="20,15">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Border Background="#3C3C3C" CornerRadius="8" Padding="2">
                            <TextBox x:Name="InputTextBox"
                                     Text="{Binding InputMessage, UpdateSourceTrigger=PropertyChanged}" 
                                     Background="Transparent"
                                     Foreground="#D4D4D4"
                                     BorderThickness="0"
                                     Padding="12,10"
                                     VerticalContentAlignment="Center"
                                     AcceptsReturn="False"
                                     TextWrapping="Wrap"
                                     MaxHeight="100"
                                     PreviewKeyDown="InputTextBox_PreviewKeyDown"/>
                        </Border>
                        
                        <!-- Send Button (visible when not generating) -->
                        <Button Grid.Column="1" 
                                Content="âž¤" 
                                Command="{Binding SendMessageCommand}"
                                Margin="10,0,0,0"
                                Padding="15,10"
                                FontSize="16"
                                Background="#6C5CE7"
                                Foreground="White"
                                BorderThickness="0"
                                ToolTip="Send message"
                                Visibility="{Binding IsGenerating, Converter={StaticResource InverseBoolToVisConverter}}"/>
                        
                        <!-- Stop Button (visible when generating) -->
                        <Button Grid.Column="2" 
                                Content="â–  Stop" 
                                Command="{Binding StopGenerationCommand}"
                                Margin="10,0,0,0"
                                Padding="15,10"
                                FontSize="14"
                                Background="#DC3545"
                                Foreground="White"
                                BorderThickness="0"
                                ToolTip="Stop generation"
                                Visibility="{Binding IsGenerating, Converter={StaticResource BoolToVisConverter}}"/>
                    </Grid>
                </Border>

                <!-- Status -->
                <TextBlock Text="{Binding StatusMessage}" 
                           Grid.Row="2"
                           VerticalAlignment="Top" 
                           HorizontalAlignment="Left" 
                           Margin="20,-5,0,0" 
                           FontSize="11" 
                           Foreground="#808080"/>
            </Grid>

            <!-- My Models View -->
            <Grid x:Name="ModelsView" Visibility="Collapsed">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Border Background="#252526" Padding="20,15">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Text="My Models" FontSize="18" FontWeight="Bold" 
                                   Foreground="#D4D4D4" VerticalAlignment="Center"/>
                        
                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                            <Button Content="Refresh" Click="RefreshModels_Click"
                                    Padding="15,6" Margin="0,0,10,0"
                                    Background="#3D3D3D" Foreground="#D4D4D4"
                                    BorderThickness="0"/>
                            <Button Content="Open Folder" Click="OpenModelsFolder_Click"
                                    Padding="15,6"
                                    Background="#3D3D3D" Foreground="#D4D4D4"
                                    BorderThickness="0"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <ListBox x:Name="MyModelsList" Grid.Row="1"
                         Background="#1E1E1E" BorderThickness="0"
                         ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border Background="#2D2D2D" Margin="10,5" Padding="15" CornerRadius="6"
                                    Cursor="Hand" MouseLeftButtonDown="ModelItem_Click">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <TextBlock Text="ðŸ§ " FontSize="24" VerticalAlignment="Center" Margin="0,0,15,0"/>
                                    
                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding Name}" 
                                                   Foreground="#D4D4D4" FontWeight="SemiBold" FontSize="14"/>
                                        <TextBlock Text="{Binding Path}" 
                                                   Foreground="#808080" FontSize="11"
                                                   TextTrimming="CharacterEllipsis"/>
                                    </StackPanel>
                                    
                                    <Button Grid.Column="2" Content="Load"
                                            Click="LoadModelFromList_Click"
                                            Tag="{Binding Path}"
                                            Padding="15,6"
                                            Background="#6C5CE7" Foreground="White"
                                            BorderThickness="0"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Padding" Value="0"/>
                        </Style>
                    </ListBox.ItemContainerStyle>
                </ListBox>
            </Grid>

            <!-- Discover View (HuggingFace Search + Convert) -->
            <Grid x:Name="DiscoverView" Visibility="Collapsed">
                <!-- This will be populated with ModelManager content -->
            </Grid>

            <!-- Settings View -->
            <Grid x:Name="SettingsView" Visibility="Collapsed">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <Border Background="#252526" Margin="20" Padding="30" CornerRadius="8"
                            VerticalAlignment="Top">
                        <StackPanel MaxWidth="600">
                            <TextBlock Text="Settings" FontSize="18" FontWeight="Bold" 
                                       Foreground="#D4D4D4" Margin="0,0,0,20"/>
                            
                            <!-- Models Folder -->
                            <TextBlock Text="Models Folder" Foreground="#808080" Margin="0,0,0,5"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBox x:Name="ModelsFolderBox" Text="C:\models"
                                         Background="#3C3C3C" Foreground="#D4D4D4"
                                         BorderBrush="#555555" Padding="10,8"/>
                                <Button Grid.Column="1" Content="Browse..."
                                        Click="BrowseModelsFolder_Click"
                                        Margin="10,0,0,0" Padding="15,8"
                                        Background="#5A5A5A" Foreground="White"
                                        BorderThickness="0"/>
                            </Grid>
                            
                            <TextBlock Text="HuggingFace Token" Foreground="#808080" Margin="0,20,0,5"/>
                            <PasswordBox x:Name="SettingsHfToken"
                                         Background="#3C3C3C" Foreground="#D4D4D4"
                                         BorderBrush="#555555" Padding="10,8"/>
                            
                            <!-- Generation Settings Section -->
                            <TextBlock Text="Generation Settings" FontSize="14" FontWeight="SemiBold" 
                                       Foreground="#D4D4D4" Margin="0,30,0,15"/>
                            
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <!-- Max Length -->
                                <StackPanel Margin="0,0,10,0">
                                    <TextBlock Text="Max Tokens" Foreground="#808080" Margin="0,0,0,5"/>
                                    <TextBox x:Name="MaxLengthBox" Text="8192"
                                             Background="#3C3C3C" Foreground="#D4D4D4"
                                             BorderBrush="#555555" Padding="10,8"/>
                                </StackPanel>
                                
                                <!-- Temperature -->
                                <StackPanel Grid.Column="1" Margin="5,0">
                                    <TextBlock Text="Temperature" Foreground="#808080" Margin="0,0,0,5"/>
                                    <TextBox x:Name="TemperatureBox" Text="0.7"
                                             Background="#3C3C3C" Foreground="#D4D4D4"
                                             BorderBrush="#555555" Padding="10,8"/>
                                </StackPanel>
                                
                                <!-- Top P -->
                                <StackPanel Grid.Column="2" Margin="10,0,0,0">
                                    <TextBlock Text="Top P" Foreground="#808080" Margin="0,0,0,5"/>
                                    <TextBox x:Name="TopPBox" Text="0.9"
                                             Background="#3C3C3C" Foreground="#D4D4D4"
                                             BorderBrush="#555555" Padding="10,8"/>
                                </StackPanel>
                            </Grid>
                            
                            <!-- System Prompt -->
                            <TextBlock Text="System Prompt" Foreground="#808080" Margin="0,15,0,5"/>
                            <TextBox x:Name="SystemPromptBox" 
                                     Text="You are a helpful AI assistant."
                                     Background="#3C3C3C" Foreground="#D4D4D4"
                                     BorderBrush="#555555" Padding="10,8"
                                     TextWrapping="Wrap" AcceptsReturn="True"
                                     MinHeight="80" MaxHeight="150"/>
                            
                            <Button Content="Save Settings" Click="SaveSettings_Click"
                                    Margin="0,20,0,0" Padding="20,10"
                                    Background="#28A745" Foreground="White"
                                    HorizontalAlignment="Left"
                                    BorderThickness="0"/>
                        </StackPanel>
                    </Border>
                </ScrollViewer>
            </Grid>

            <!-- Loading Overlay -->
            <Grid Background="#80000000" 
                  Visibility="{Binding IsGenerating, Converter={StaticResource BoolToVisConverter}}"
                  IsHitTestVisible="False">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="ðŸˆ" FontSize="48" HorizontalAlignment="Center"/>
                    <TextBlock Text="Generating..." 
                               Foreground="White"
                               FontSize="16" Margin="0,10,0,0"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</Window>
