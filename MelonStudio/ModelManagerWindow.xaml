<Window x:Class="MelonStudio.ModelManagerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Model Manager - MelonStudio" 
        Height="700" Width="1000"
        Background="#1E1E1E"
        WindowStartupLocation="CenterOwner">

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="350" />
        </Grid.ColumnDefinitions>

        <!-- Left Panel: Model Browser -->
        <Grid Grid.Column="0" Margin="0,0,15,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="200" />
            </Grid.RowDefinitions>

            <!-- Header -->
            <TextBlock Text="HuggingFace Model Browser" 
                       FontSize="18" FontWeight="Bold" 
                       Foreground="#D4D4D4" Margin="0,0,0,15"/>

            <!-- Search Bar -->
            <Grid Grid.Row="1" Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <TextBox x:Name="SearchBox"
                         Text="{Binding SearchQuery, UpdateSourceTrigger=PropertyChanged}"
                         Background="#3C3C3C" Foreground="#D4D4D4"
                         BorderBrush="#555555" Padding="10,8"
                         VerticalContentAlignment="Center"/>

                <Button Grid.Column="1" Content="Search" 
                        Command="{Binding SearchModelsCommand}"
                        Margin="10,0,0,0" Padding="15,8"
                        Background="#0E639C" Foreground="White"
                        BorderThickness="0"/>

                <Button Grid.Column="2" Content="Recommended" 
                        Command="{Binding LoadRecommendedModelsCommand}"
                        Margin="10,0,0,0" Padding="15,8"
                        Background="#5A5A5A" Foreground="White"
                        BorderThickness="0"/>
            </Grid>

            <!-- Model List -->
            <ListBox Grid.Row="2" 
                     ItemsSource="{Binding SearchResults}"
                     SelectedItem="{Binding SelectedModel}"
                     Background="#252526" BorderThickness="0"
                     ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border Background="#2D2D2D" Margin="0,2" Padding="12" CornerRadius="4"
                                Cursor="Hand">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Text="{Binding Id}" 
                                           Foreground="#569CD6" FontWeight="SemiBold"
                                           TextTrimming="CharacterEllipsis"/>
                                
                                <StackPanel Grid.Column="1" Orientation="Horizontal">
                                    <TextBlock Text="⬇" Foreground="#808080" Margin="0,0,3,0"/>
                                    <TextBlock Text="{Binding Downloads, StringFormat=N0}" 
                                               Foreground="#808080"/>
                                    <TextBlock Text="  ❤" Foreground="#808080" Margin="10,0,3,0"/>
                                    <TextBlock Text="{Binding Likes}" Foreground="#808080"/>
                                </StackPanel>

                                <TextBlock Grid.Row="1" Grid.ColumnSpan="2"
                                           Text="{Binding PipelineTag}" 
                                           Foreground="#808080" FontSize="11"
                                           Margin="0,4,0,0"/>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
                <ListBox.ItemContainerStyle>
                    <Style TargetType="ListBoxItem">
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="Padding" Value="0"/>
                        <Setter Property="Margin" Value="0"/>
                        <EventSetter Event="MouseDoubleClick" Handler="ModelItem_DoubleClick"/>
                    </Style>
                </ListBox.ItemContainerStyle>
            </ListBox>

            <!-- Log Header -->
            <TextBlock Grid.Row="3" Text="Conversion Log" 
                       Foreground="#808080" Margin="0,15,0,5"/>

            <!-- Conversion Log -->
            <Border Grid.Row="4" Background="#1A1A1A" CornerRadius="4">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <TextBox Text="{Binding ConversionLog, Mode=OneWay}"
                             Background="Transparent" Foreground="#98C379"
                             BorderThickness="0" IsReadOnly="True"
                             FontFamily="Consolas" FontSize="11"
                             TextWrapping="Wrap" Padding="10"
                             VerticalScrollBarVisibility="Auto"/>
                </ScrollViewer>
            </Border>
        </Grid>

        <!-- Right Panel: Conversion Settings -->
        <Border Grid.Column="1" Background="#252526" CornerRadius="8" Padding="20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Conversion Settings" 
                           FontSize="16" FontWeight="Bold" 
                           Foreground="#D4D4D4" Margin="0,0,0,20"/>

                <!-- Model ID -->
                <StackPanel Grid.Row="1" Margin="0,0,0,15">
                    <TextBlock Text="Model ID or Local Path" Foreground="#808080" Margin="0,0,0,5"/>
                    <TextBox Text="{Binding SelectedModelId, UpdateSourceTrigger=PropertyChanged}"
                             Background="#3C3C3C" Foreground="#D4D4D4"
                             BorderBrush="#555555" Padding="10,8"/>
                </StackPanel>

                <!-- Output Folder -->
                <StackPanel Grid.Row="2" Margin="0,0,0,15">
                    <TextBlock Text="Output Folder" Foreground="#808080" Margin="0,0,0,5"/>
                    <TextBox Text="{Binding OutputFolder, UpdateSourceTrigger=PropertyChanged}"
                             Background="#3C3C3C" Foreground="#D4D4D4"
                             BorderBrush="#555555" Padding="10,8"/>
                </StackPanel>

                <!-- Precision -->
                <StackPanel Grid.Row="3" Margin="0,0,0,15">
                    <TextBlock Text="Precision (int4 = smallest, fastest)" 
                               Foreground="#808080" Margin="0,0,0,5"/>
                    <ComboBox ItemsSource="{Binding PrecisionOptions}"
                              SelectedItem="{Binding SelectedPrecision}"
                              Background="#3C3C3C" Foreground="#D4D4D4"
                              Padding="10,8"/>
                </StackPanel>

                <!-- Execution Provider -->
                <StackPanel Grid.Row="4" Margin="0,0,0,15">
                    <TextBlock Text="Execution Provider" Foreground="#808080" Margin="0,0,0,5"/>
                    <ComboBox ItemsSource="{Binding ProviderOptions}"
                              SelectedItem="{Binding SelectedProvider}"
                              Background="#3C3C3C" Foreground="#D4D4D4"
                              Padding="10,8"/>
                </StackPanel>

                <!-- CUDA Graph -->
                <CheckBox Grid.Row="5" 
                          Content="Enable CUDA Graph (faster inference)"
                          IsChecked="{Binding EnableCudaGraph}"
                          Foreground="#D4D4D4" Margin="0,0,0,15"/>

                <!-- HuggingFace Token -->
                <StackPanel Grid.Row="6" Margin="0,0,0,15">
                    <TextBlock Text="HuggingFace Token (optional)" 
                               Foreground="#808080" Margin="0,0,0,5"/>
                    <PasswordBox x:Name="HfTokenBox"
                                 Background="#3C3C3C" Foreground="#D4D4D4"
                                 BorderBrush="#555555" Padding="10,8"
                                 PasswordChanged="HfTokenBox_PasswordChanged"/>
                </StackPanel>

                <!-- Status -->
                <Border Grid.Row="7" Background="#1A1A1A" CornerRadius="4" Padding="10" Margin="0,0,0,15">
                    <TextBlock Text="{Binding StatusMessage}" 
                               Foreground="#808080" TextWrapping="Wrap"/>
                </Border>

                <!-- Buttons -->
                <StackPanel Grid.Row="9">
                    <Button Content="Convert Model" 
                            Command="{Binding ConvertModelCommand}"
                            IsEnabled="{Binding IsConverting, Converter={StaticResource InverseBoolConverter}}"
                            Padding="15,12" Margin="0,0,0,10"
                            Background="#28A745" Foreground="White"
                            FontWeight="Bold" BorderThickness="0"/>

                    <Button Content="Cancel" 
                            Command="{Binding CancelConversionCommand}"
                            Visibility="{Binding IsConverting, Converter={StaticResource BoolToVisConverter}}"
                            Padding="15,12"
                            Background="#DC3545" Foreground="White"
                            BorderThickness="0"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
