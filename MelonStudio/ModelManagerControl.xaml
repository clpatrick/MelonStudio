<UserControl x:Class="MelonStudio.ModelManagerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:converters="clr-namespace:MelonStudio.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1100"
             Background="#1E1E1E"
             Focusable="True">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <converters:NullToVisibilityConverter x:Key="NullToVis"/>
        
        <!-- Dark Theme ComboBox Toggle Button -->
        <ControlTemplate x:Key="ComboBoxToggleButton" TargetType="ToggleButton">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="20"/>
                </Grid.ColumnDefinitions>
                <Border x:Name="Border" Grid.ColumnSpan="2" Background="#3C3C3C" BorderBrush="#555555" BorderThickness="1" CornerRadius="2"/>
                <Border Grid.Column="0" Background="#3C3C3C" BorderBrush="#555555" BorderThickness="0,0,1,0" CornerRadius="2,0,0,2"/>
                <Path x:Name="Arrow" Grid.Column="1" Fill="#D4D4D4" HorizontalAlignment="Center" VerticalAlignment="Center" Data="M 0 0 L 4 4 L 8 0 Z"/>
            </Grid>
            <ControlTemplate.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter TargetName="Border" Property="Background" Value="#505050"/>
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>

        <!-- Dark ComboBox Style -->
        <Style x:Key="DarkComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Foreground" Value="#D4D4D4"/>
            <Setter Property="Background" Value="#3C3C3C"/>
            <Setter Property="BorderBrush" Value="#555555"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Auto"/>
            <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Auto"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <ToggleButton x:Name="ToggleButton" Template="{StaticResource ComboBoxToggleButton}" Grid.Column="2" Focusable="False" ClickMode="Press" IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"/>
                            <ContentPresenter x:Name="ContentSite" IsHitTestVisible="False" Content="{TemplateBinding SelectionBoxItem}" ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}" ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}" Margin="8,3,23,3" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                            <Popup x:Name="Popup" Placement="Bottom" IsOpen="{TemplateBinding IsDropDownOpen}" AllowsTransparency="True" Focusable="False" PopupAnimation="Slide">
                                <Grid x:Name="DropDown" SnapsToDevicePixels="True" MinWidth="{TemplateBinding ActualWidth}" MaxHeight="{TemplateBinding MaxDropDownHeight}">
                                    <Border x:Name="DropDownBorder" Background="#2D2D30" BorderBrush="#555555" BorderThickness="1"/>
                                    <ScrollViewer Margin="4,6,4,6" SnapsToDevicePixels="True">
                                        <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Contained"/>
                                    </ScrollViewer>
                                </Grid>
                            </Popup>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Dark ComboBoxItem Style -->
        <Style x:Key="DarkComboBoxItemStyle" TargetType="ComboBoxItem">
            <Setter Property="Background" Value="#2D2D30"/>
            <Setter Property="Foreground" Value="#D4D4D4"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBoxItem">
                        <Border x:Name="Bd" Background="{TemplateBinding Background}" Padding="{TemplateBinding Padding}" SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#3E3E42"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#007ACC"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="400"/>
        </Grid.ColumnDefinitions>

        <!-- Left: Search and Results -->
        <Grid Margin="0,0,15,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="150"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <TextBlock Text="Discover Models" 
                       FontSize="20" FontWeight="Bold" 
                       Foreground="#D4D4D4" Margin="0,0,0,15"/>

            <!-- Search Bar -->
            <Grid Grid.Row="1" Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBox x:Name="SearchBox"
                         Text="{Binding SearchQuery, UpdateSourceTrigger=PropertyChanged}"
                         Background="#3C3C3C" Foreground="#D4D4D4"
                         BorderBrush="#555555" Padding="12,10"
                         VerticalContentAlignment="Center"
                         KeyDown="SearchBox_KeyDown"/>

                <!-- Info Icon with Supported Formats Tooltip -->
                <TextBlock Grid.Column="1" Text="â“˜" FontSize="16" Foreground="#808080"
                           VerticalAlignment="Center" Margin="10,0,0,0" Cursor="Help">
                    <TextBlock.ToolTip>
                        <ToolTip MaxWidth="400">
                            <StackPanel>
                                <TextBlock Text="Supported Model Formats" FontWeight="Bold" Margin="0,0,0,8"/>
                                
                                <TextBlock Text="âœ“ Compatible (convert/download):" Foreground="#28A745" FontWeight="SemiBold"/>
                                <TextBlock Text="  â€¢ PyTorch/SafeTensors (Phi, Llama, Mistral, Qwen, Gemma, etc.)" Margin="0,2,0,0"/>
                                <TextBlock Text="  â€¢ ONNX format (ready to use)" Margin="0,2,0,8"/>
                                
                                <TextBlock Text="âš  Warning (may work):" Foreground="#FFC107" FontWeight="SemiBold"/>
                                <TextBlock Text="  â€¢ GPTQ/AWQ quantized (via AutoGPTQ/AutoAWQ)" Margin="0,2,0,0"/>
                                <TextBlock Text="  â€¢ GGUF float16/32 only" Margin="0,2,0,8"/>
                                
                                <TextBlock Text="âœ— Incompatible:" Foreground="#DC3545" FontWeight="SemiBold"/>
                                <TextBlock Text="  â€¢ MLX format (Apple Silicon)" Margin="0,2,0,0"/>
                                <TextBlock Text="  â€¢ EXL2 format (ExLlamaV2)" Margin="0,2,0,0"/>
                                <TextBlock Text="  â€¢ Quantized GGUF (Q4, Q5, Q8, etc.)" Margin="0,2,0,0"/>
                            </StackPanel>
                        </ToolTip>
                    </TextBlock.ToolTip>
                </TextBlock>

                <Button Grid.Column="2" Content="Search" 
                        Command="{Binding SearchModelsCommand}"
                        Margin="10,0,0,0" Padding="20,10"
                        Background="#6C5CE7" Foreground="White"
                        BorderThickness="0"/>

                <!-- Sort Dropdown -->
                <ComboBox Grid.Column="3" 
                          ItemsSource="{Binding SortOptions}"
                          SelectedItem="{Binding SelectedSort}"
                          Margin="10,0,0,0" Padding="10,8" Width="140"
                          Style="{StaticResource DarkComboBoxStyle}"
                          ItemContainerStyle="{StaticResource DarkComboBoxItemStyle}">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding}" Foreground="#D4D4D4"/>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
            </Grid>

            <!-- Filter Checkboxes -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,0,0,15">
                <CheckBox Content="ONNX Ready"
                          IsChecked="{Binding FilterOnnx}"
                          Foreground="#D4D4D4" Margin="0,0,20,0"/>
                <CheckBox Content="CUDA"
                          IsChecked="{Binding FilterCuda}"
                          Foreground="#D4D4D4" Margin="0,0,20,0"/>
                <CheckBox Content="INT4"
                          IsChecked="{Binding FilterInt4}"
                          Foreground="#D4D4D4" Margin="0,0,20,0"/>
                <CheckBox Content="FP16"
                          IsChecked="{Binding FilterFp16}"
                          Foreground="#D4D4D4" Margin="0,0,20,0"/>
                <CheckBox Content="Source Models"
                          IsChecked="{Binding FilterSourceModels}"
                          Foreground="#D4D4D4" Margin="0,0,20,0"
                          ToolTip="Show only unconverted models (SafeTensors/PyTorch) suitable for hybrid CPU/GPU splitting"/>

                <TextBlock Text="{Binding ResultCount, StringFormat='Showing {0} models'}"
                           Foreground="#808080" VerticalAlignment="Center"
                           Margin="20,0,0,0"/>
            </StackPanel>

            <!-- Model List -->
            <ScrollViewer Grid.Row="3" 
                          VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Disabled"
                          CanContentScroll="False"
                          Background="#252526">
                <ItemsControl ItemsSource="{Binding SearchResults}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="#2D2D2D" Margin="0,2" Padding="12,10" CornerRadius="6"
                                    Cursor="Hand" MouseLeftButtonDown="ModelItem_Click"
                                    ToolTip="{Binding CompatibilityTooltip}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <!-- Compatibility Icon -->
                                    <TextBlock Text="{Binding CompatibilityIcon}" 
                                               FontSize="14" Margin="0,0,8,0"
                                               VerticalAlignment="Center">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Foreground" Value="#28A745"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding CompatibilityStatus}" Value="Warning">
                                                        <Setter Property="Foreground" Value="#FFC107"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding CompatibilityStatus}" Value="Incompatible">
                                                        <Setter Property="Foreground" Value="#DC3545"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>

                                    <!-- Model ID -->
                                    <TextBlock Grid.Column="1" Text="{Binding Id}" 
                                               Foreground="#569CD6" FontWeight="SemiBold" FontSize="13"
                                               TextTrimming="CharacterEllipsis"/>
                                
                                    <!-- Stats -->
                                    <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                                        <TextBlock Text="â¬‡" Foreground="#808080" Margin="0,0,3,0" FontSize="10"/>
                                        <TextBlock Text="{Binding DownloadsFormatted}" Foreground="#808080" FontSize="11"/>
                                        <TextBlock Text=" Â· â¤" Foreground="#808080" Margin="8,0,3,0" FontSize="10"/>
                                        <TextBlock Text="{Binding LikesFormatted}" Foreground="#808080" FontSize="11"/>
                                    </StackPanel>

                                    <!-- Tags and Date -->
                                    <StackPanel Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" Orientation="Horizontal" Margin="0,4,0,0">
                                        <TextBlock Text="{Binding PipelineTag}" 
                                                   Foreground="#808080" FontSize="11"/>
                                        <TextBlock Text=" Â· " Foreground="#555555"/>
                                        <TextBlock Text="{Binding LastModifiedFormatted}" 
                                                   Foreground="#606060" FontSize="11"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>

            <!-- Log Header -->
            <TextBlock Grid.Row="4" Text="Conversion Log" 
                       Foreground="#808080" Margin="0,15,0,5"/>

            <!-- Conversion Log -->
            <Border Grid.Row="5" Background="#1A1A1A" CornerRadius="4">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <TextBox Text="{Binding ConversionLog, Mode=OneWay}"
                             Background="Transparent" Foreground="#98C379"
                             BorderThickness="0" IsReadOnly="True"
                             FontFamily="Consolas" FontSize="11"
                             TextWrapping="Wrap" Padding="10"
                             VerticalScrollBarVisibility="Auto"/>
                </ScrollViewer>
            </Border>
        </Grid>

        <!-- Right: Model Details Panel -->
        <Border Grid.Column="1" Background="#252526" CornerRadius="8" Padding="20">
            <ScrollViewer VerticalScrollBarVisibility="Auto" 
                         CanContentScroll="False"
                         HorizontalScrollBarVisibility="Disabled">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Model Info Header -->
                    <StackPanel Visibility="{Binding SelectedModelDetails, Converter={StaticResource NullToVis}}">
                        <TextBlock Text="{Binding SelectedModelDetails.DisplayName}" 
                                   FontSize="18" FontWeight="Bold" 
                                   Foreground="#D4D4D4" TextWrapping="Wrap"/>
                        <TextBlock Text="{Binding SelectedModelDetails.Author}" 
                                   Foreground="#808080" Margin="0,3,0,0"/>
                        
                        <!-- Stats Row -->
                        <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                            <Border Background="#3D3D3D" CornerRadius="4" Padding="8,4" Margin="0,0,8,0">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="â¬‡ " Foreground="#808080"/>
                                    <TextBlock Text="{Binding SelectedModelDetails.Downloads, StringFormat=N0}" 
                                               Foreground="#D4D4D4"/>
                                </StackPanel>
                            </Border>
                            <Border Background="#3D3D3D" CornerRadius="4" Padding="8,4">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="â¤ " Foreground="#808080"/>
                                    <TextBlock Text="{Binding SelectedModelDetails.Likes, StringFormat=N0}" 
                                               Foreground="#D4D4D4"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>

                        <!-- HuggingFace Link -->
                        <Button Content="Open on HuggingFace â†—" 
                                Command="{Binding OpenModelPageCommand}"
                                Margin="0,10,0,0" Padding="10,6"
                                Background="Transparent" Foreground="#569CD6"
                                BorderThickness="0" HorizontalAlignment="Left"
                                Cursor="Hand"/>
                    </StackPanel>

                    <!-- Description -->
                    <TextBlock Grid.Row="1" 
                               Text="{Binding SelectedModelDetails.Description}" 
                               Foreground="#AAAAAA" TextWrapping="Wrap"
                               Margin="0,15,0,0"
                               Visibility="{Binding SelectedModelDetails.Description, Converter={StaticResource BoolToVis}}"/>

                    <!-- Total Size -->
                    <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,15,0,0"
                                Visibility="{Binding SelectedModelDetails, Converter={StaticResource NullToVis}}">
                        <TextBlock Text="Total Size: " Foreground="#808080"/>
                        <TextBlock Text="{Binding SelectedModelDetails.TotalSizeFormatted}" 
                                   Foreground="#D4D4D4" FontWeight="SemiBold"/>
                    </StackPanel>

                    <!-- Model Format Badge -->
                    <Border Grid.Row="2" Background="#3D3D3D" CornerRadius="4" Padding="8,4" 
                            Margin="0,45,0,0" HorizontalAlignment="Left"
                            Visibility="{Binding SelectedModelDetails, Converter={StaticResource NullToVis}}">
                        <TextBlock Text="{Binding SelectedModelDetails.ModelFormat}" 
                                   Foreground="#D4D4D4" FontSize="12"/>
                    </Border>

                    <!-- Separator -->
                    <Border Grid.Row="3" Height="1" Background="#3D3D3D" Margin="0,20,0,15"/>

                    <!-- Conversion Settings Header -->
                    <TextBlock Grid.Row="4" Text="Conversion Settings" 
                               FontSize="14" FontWeight="SemiBold" 
                               Foreground="#D4D4D4" Margin="0,0,0,15"/>

                    <!-- Model ID -->
                    <StackPanel Grid.Row="5" Margin="0,0,0,12">
                        <TextBlock Text="Model ID" Foreground="#808080" Margin="0,0,0,5"/>
                        <TextBox Text="{Binding SelectedModelId, UpdateSourceTrigger=PropertyChanged}"
                                 Background="#3C3C3C" Foreground="#D4D4D4"
                                 BorderBrush="#555555" Padding="10,8"/>
                                 
                        <!-- Variant Selector for Multi-Variant ONNX Models -->
                        <StackPanel Margin="0,12,0,0" Visibility="{Binding HasVariants, Converter={StaticResource BoolToVis}}">
                             <TextBlock Text="Select Variant (Subfolder)" Foreground="#FFC107" FontWeight="SemiBold" Margin="0,0,0,5"/>
                             <ComboBox ItemsSource="{Binding Variants}" 
                                       SelectedItem="{Binding SelectedVariant}"
                                       Padding="10,8"
                                       Style="{StaticResource DarkComboBoxStyle}"
                                       ItemContainerStyle="{StaticResource DarkComboBoxItemStyle}"/>
                             <TextBlock Text="Note: This will download ONLY the selected variant." 
                                        Foreground="#808080" FontSize="10" Margin="0,2,0,0"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Precision + Provider Row -->
                    <Grid Grid.Row="6" Margin="0,0,0,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Margin="0,0,5,0">
                            <TextBlock Text="Precision" Foreground="#808080" Margin="0,0,0,5"/>
                            <ComboBox ItemsSource="{Binding PrecisionOptions}"
                                      SelectedItem="{Binding SelectedPrecision}"
                                      Padding="10,8"
                                      Style="{StaticResource DarkComboBoxStyle}"
                                      ItemContainerStyle="{StaticResource DarkComboBoxItemStyle}"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Margin="5,0,0,0">
                            <TextBlock Text="Provider" Foreground="#808080" Margin="0,0,0,5"/>
                            <ComboBox ItemsSource="{Binding ProviderOptions}"
                                      SelectedItem="{Binding SelectedProvider}"
                                      Padding="10,8"
                                      Style="{StaticResource DarkComboBoxStyle}"
                                      ItemContainerStyle="{StaticResource DarkComboBoxItemStyle}"/>
                        </StackPanel>
                    </Grid>

                    <!-- Advanced Settings -->
                    <Expander Grid.Row="7" 
                              Header="Advanced Settings"
                              IsExpanded="False"
                              Margin="0,0,0,12">
                        <Expander.Style>
                            <Style TargetType="Expander">
                                <Setter Property="Background" Value="#2D2D2D"/>
                                <Setter Property="Foreground" Value="#D4D4D4"/>
                                <Setter Property="BorderBrush" Value="#555555"/>
                                <Setter Property="BorderThickness" Value="1"/>
                                <Setter Property="Padding" Value="10,8"/>
                                <Setter Property="FontSize" Value="12"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                            </Style>
                        </Expander.Style>
                        <StackPanel Margin="0,10,0,0">
                            <!-- Download Location -->
                            <StackPanel Margin="0,0,0,12">
                                <TextBlock Text="Download Location" Foreground="#808080" Margin="0,0,0,5"/>
                                <TextBox Text="{Binding OutputFolder, UpdateSourceTrigger=PropertyChanged}"
                                         Background="#3C3C3C" Foreground="#D4D4D4"
                                         BorderBrush="#555555" Padding="10,8"/>
                            </StackPanel>
                            
                            <!-- HF Token -->
                            <StackPanel Margin="0,0,0,0">
                                <TextBlock Text="HuggingFace Token (optional)" 
                                           Foreground="#808080" Margin="0,0,0,5"/>
                                <PasswordBox x:Name="HfTokenBox"
                                             Background="#3C3C3C" Foreground="#D4D4D4"
                                             BorderBrush="#555555" Padding="10,8"
                                             PasswordChanged="HfTokenBox_PasswordChanged"/>
                                <TextBlock Text="Required for private/gated models" 
                                           Foreground="#606060" FontSize="10" Margin="0,4,0,0"/>
                            </StackPanel>
                        </StackPanel>
                    </Expander>

                    <!-- Buttons -->
                    <StackPanel Grid.Row="9">
                        <!-- Status -->
                        <Border Background="#1A1A1A" CornerRadius="4" Padding="10" Margin="0,0,0,12">
                            <StackPanel>
                                <TextBlock Text="{Binding StatusMessage}" 
                                           Foreground="#808080" TextWrapping="Wrap" Margin="0,0,0,8"/>
                                <!-- Progress Bar -->
                                <ProgressBar Value="{Binding DownloadProgress}" 
                                             Maximum="100"
                                             Height="6"
                                             Margin="0,0,0,0"
                                             Visibility="{Binding IsConverting, Converter={StaticResource BoolToVis}}">
                                    <ProgressBar.Style>
                                        <Style TargetType="ProgressBar">
                                            <Setter Property="IsIndeterminate" Value="True"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsDownloadProgressIndeterminate}" Value="False">
                                                    <Setter Property="IsIndeterminate" Value="False"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </ProgressBar.Style>
                                </ProgressBar>
                            </StackPanel>
                        </Border>

                        <!-- Download Button (for ONNX models) -->
                        <Button Command="{Binding DownloadOnnxModelCommand}"
                                Padding="15,12" Margin="0,0,0,8"
                                FontWeight="Bold" FontSize="14" BorderThickness="0">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="#3D3D3D"/>
                                    <Setter Property="Foreground" Value="#808080"/>
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding SelectedModelDetails.IsOnnxModel}" Value="True">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding IsConverting}" Value="True">
                                            <Setter Property="IsEnabled" Value="False"/>
                                            <Setter Property="Background" Value="#2D2D2D"/>
                                            <Setter Property="Foreground" Value="#606060"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding SelectedModelDetails, Converter={StaticResource NullToVis}}" Value="Collapsed">
                                            <Setter Property="IsEnabled" Value="False"/>
                                            <Setter Property="Background" Value="#2D2D2D"/>
                                            <Setter Property="Foreground" Value="#606060"/>
                                        </DataTrigger>
                                        <Trigger Property="IsEnabled" Value="True">
                                            <Setter Property="Background" Value="#6C5CE7"/>
                                            <Setter Property="Foreground" Value="White"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="â¬‡ Download"/>
                                <TextBlock Text=" (" 
                                           Visibility="{Binding SelectedModelDetails, Converter={StaticResource NullToVis}}"/>
                                <TextBlock Text="{Binding SelectedModelDetails.TotalSizeFormatted}"
                                           Visibility="{Binding SelectedModelDetails, Converter={StaticResource NullToVis}}"/>
                                <TextBlock Text=")" 
                                           Visibility="{Binding SelectedModelDetails, Converter={StaticResource NullToVis}}"/>
                            </StackPanel>
                        </Button>

                        <!-- Download Button (for source models) -->
                        <Button Command="{Binding DownloadSourceModelCommand}"
                                Padding="15,12" Margin="0,0,0,8"
                                FontWeight="Bold" FontSize="14" BorderThickness="0">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="#3D3D3D"/>
                                    <Setter Property="Foreground" Value="#808080"/>
                                    <Setter Property="Visibility" Value="Visible"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding SelectedModelDetails.IsOnnxModel}" Value="True">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding IsConverting}" Value="True">
                                            <Setter Property="IsEnabled" Value="False"/>
                                            <Setter Property="Background" Value="#2D2D2D"/>
                                            <Setter Property="Foreground" Value="#606060"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding SelectedModelDetails, Converter={StaticResource NullToVis}}" Value="Collapsed">
                                            <Setter Property="IsEnabled" Value="False"/>
                                            <Setter Property="Background" Value="#2D2D2D"/>
                                            <Setter Property="Foreground" Value="#606060"/>
                                        </DataTrigger>
                                        <Trigger Property="IsEnabled" Value="True">
                                            <Setter Property="Background" Value="#28A745"/>
                                            <Setter Property="Foreground" Value="White"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="â¬‡ Download"/>
                                <TextBlock Text=" (" 
                                           Visibility="{Binding SelectedModelDetails, Converter={StaticResource NullToVis}}"/>
                                <TextBlock Text="{Binding SelectedModelDetails.TotalSizeFormatted}"
                                           Visibility="{Binding SelectedModelDetails, Converter={StaticResource NullToVis}}"/>
                                <TextBlock Text=")" 
                                           Visibility="{Binding SelectedModelDetails, Converter={StaticResource NullToVis}}"/>
                            </StackPanel>
                        </Button>

                        <!-- Convert Button (appears after successful download) -->
                        <Button Command="{Binding OpenConvertTabCommand}"
                                Padding="15,12" Margin="0,0,0,8"
                                Background="#6C5CE7" Foreground="White"
                                FontWeight="Bold" FontSize="14" BorderThickness="0">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding ShowConvertButton}" Value="True">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="ðŸ”„ Convert to ONNX"/>
                            </StackPanel>
                        </Button>

                        <Button Content="Cancel" 
                                Command="{Binding CancelConversionCommand}"
                                Visibility="{Binding IsConverting, Converter={StaticResource BoolToVis}}"
                                Padding="15,12"
                                Background="#DC3545" Foreground="White"
                                BorderThickness="0"/>
                    </StackPanel>
                </Grid>
            </ScrollViewer>
        </Border>
    </Grid>
</UserControl>
